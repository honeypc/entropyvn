# syntax=docker/dockerfile:1

# Development Dockerfile for Rails
# Build with: docker build -f Dockerfile.dev -t entropyvn-dev .
# Run with: docker run -p 3000:3000 -v $(pwd):/rails entropyvn-dev

# Make sure RUBY_VERSION matches the Ruby version in .ruby-version
ARG RUBY_VERSION=3.4.3
FROM docker.io/library/ruby:$RUBY_VERSION-slim

# Install development dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
        build-essential \
        curl \
        git \
        libpq-dev \
        libvips \
        libyaml-dev \
        postgresql-client && \
    rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*

# Install Node.js 20.x (using NodeSource for latest LTS)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Install Yarn (optional, for compatibility)
RUN npm install -g yarn

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle" \
    RAILS_SERVE_STATIC_FILES="true" \
    RAILS_LOG_TO_STDOUT="true"

# Rails app lives here
WORKDIR /rails

# Install gems (will be installed at runtime to avoid platform issues)
COPY Gemfile Gemfile.lock ./

# Install npm dependencies
COPY package.json ./

# Copy application code
COPY . .

# Run setup on first start - this will be done in the container
# Precompile bootsnap for faster boot times (done at runtime)

# Create necessary directories
RUN mkdir -p tmp/pids tmp/sockets log storage

# Expose port
EXPOSE 3000

# Set default command
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]
