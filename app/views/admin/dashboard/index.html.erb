<div class="dashboard">
  <header class="dashboard__header">
    <h1>Admin Dashboard</h1>
    <p>Quick overview of system activity.</p>
  </header>

  <section class="dashboard__stats">
    <div class="dashboard__stat">
      <h2>Users</h2>
      <p><%= @stats[:users] %></p>
      <%= link_to "Manage users", admin_users_path %>
    </div>
    <div class="dashboard__stat">
      <h2>Roles</h2>
      <p><%= @stats[:roles] %></p>
      <%= link_to "Manage roles", admin_roles_path %>
    </div>
    <div class="dashboard__stat">
      <h2>Permissions</h2>
      <p><%= @stats[:permissions] %></p>
      <%= link_to "Manage permissions", admin_permissions_path %>
    </div>
  </section>

  <section class="dashboard__recent">
    <div>
      <h2>Recent Users</h2>
      <ul>
        <% @recent_users.each do |user| %>
          <li><%= link_to user.name.presence || user.email, admin_user_path(user) %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2>Recent Roles</h2>
      <ul>
        <% @recent_roles.each do |role| %>
          <li><%= link_to role.name, admin_role_path(role) %></li>
        <% end %>
      </ul>
    </div>
  </section>
</div>
